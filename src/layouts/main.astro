---
import '/src/styles/global.css';
const { title } = Astro.props.frontmatter || Astro.props;
const footerData = [
	{
		text: "Contacto",
		link: "mailto:tacto@sabhz.com"
	},
	{
		text: "Ahora",
		link: "ahora"
	},
	{
		text: "Lecturas",
		link: "lecturas"
	},
	{
		text: "RSS",
		link: "rss.xml"
	}
]
---

<html lang='es'>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{ title }</title>
	</head>

	<body>
		<main>
			<header>
				<h1 class="title">
					<a href="/">{title}</a>
				</h1>
			</header>
			<slot />
		</main>
		<footer>
			<p>❦</p>
			<p><a href="archivo">Archivo de publicaciones</a></p>
			<p>Saber más:</p>
			<p>
				{ footerData.map(item => 
					<a href={item.link}> {item.text} </a>) 	
				}
			</p>
		</footer>
	</body>
</html>
